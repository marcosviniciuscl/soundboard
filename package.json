{
    "name": "hahaha-app",
    "version": "0.0.5",
    "description": "Hahaha com atalhos personalizados",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder --publish always"
    },
    "keywords": [
        "soundboard",
        "hahaha",
        "hotkeys",
        "audio"
    ],
    "author": {
        "name": "Marcos Vinicius Cruz Lima",
        "email": "marcosviniciuscl@outlook.com"
    },
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "electron-localshortcut": "^3.2.1",
        "electron-updater": "^6.1.7",
        "loudness": "^0.4.2",
        "sortablejs": "^1.15.6"
    },
    "build": {
        "appId": "com.mvclima.hahaha",
        "productName": "Hahaha",
        "files": [
            "main.js",
            "index.html",
            "icon.png",
            "icon.ico",
            "overlay.html"
        ],
        "publish": {
            "provider": "github"
        },
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "AudioVideo",
            "icon": "icon.png"
        },
        "deb": {
            "depends": [
                "libfuse2"
            ]
        }
    }
}
